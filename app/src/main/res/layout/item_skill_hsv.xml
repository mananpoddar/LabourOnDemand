<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_skill_hsv_cv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_skill_hsv_cl"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_skill_hsv_civ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="@dimen/margin_large"
            android:paddingTop="@dimen/padding_large"
            android:paddingBottom="@dimen/padding_normal"
            android:paddingStart="@dimen/padding_larger"
            android:paddingEnd="@dimen/padding_larger"
            android:src="@drawable/ic_carpenter_tools_no_colour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_skill_hsv_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:paddingBottom="@dimen/padding_small"
            android:text="Plumber"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_skill_hsv_civ"
            app:layout_constraintStart_toStartOf="@+id/item_skill_hsv_civ"
            app:layout_constraintTop_toBottomOf="@+id/item_skill_hsv_civ" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
